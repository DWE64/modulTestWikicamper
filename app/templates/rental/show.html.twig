{% extends 'base.html.twig' %}

{% block section %}
    <h1>Rental</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rental.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ rental.title }}</td>
            </tr>
            <tr>
                <th>Describe</th>
                <td>{{ rental.describe }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ rental.price }}</td>
            </tr>
            <tr>
                <th>Localisation</th>
                <td>{{ rental.localisation }}</td>
            </tr>
            <tr>
                <th>Filename</th>
                <td><img src="{{ asset('upload/picture/'~rental.filename) }}" alt="camping-car" class="img-fluid"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_rental_index') }}">back to list</a>

    <a href="{{ path('app_rental_edit', {'id': rental.id}) }}">edit</a>

    {{ include('rental/_delete_form.html.twig') }}
{% endblock %}
